{% block title %}Etudiant index{% endblock %}

{% block container %}
    <h1>Gérer les Encadrants des Sociétés </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>NumeroTelephone</th>
                <th>Nom Societe</th>
                <th>Poste</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for encadrant_societe in encadrant_societes %}
            <tr>
                <td>{{ encadrant_societe.id }}</td>
                <td>{{ encadrant_societe.nom }}</td>
                <td>{{ encadrant_societe.prenom }}</td>
                <td>{{ encadrant_societe.numeroTelephone }}</td>
                <td>{{ encadrant_societe.idSociete }}</td>
                <td>{{ encadrant_societe.poste }}</td>
                <td>
                    <a href="{{ path('encadrant_societe_show', {'id': encadrant_societe.id}) }}">show</a>
                    <a href="{{ path('encadrant_societe_edit', {'id': encadrant_societe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('encadrant_societe_new') }}">Create new</a>
{% endblock %}
