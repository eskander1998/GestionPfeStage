<body style="background-color: #666666;">
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">

            <div class="login100-form validate-form">
                {{ form_start(form) }}
                <h1 style="text-align:center">
                    				</h1>
                <span class="login100-form-title p-b-43">
						Plateforme de Gestion des PFEs
					</span>
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                <label for="exampleInputEmail1">Adresse mail</label>

                <div class="wrap-input100 validate-input" >

                    {{ form_widget(form.email, {'attr':{'class':'input100'}}) }}
                    {{ form_errors(form.email) }}


                </div>

                <label for="exampleInputPassword1">Mot de passe </label>

                <div class="wrap-input100 validate-input" data-validate="Password is required">

                    {{ form_widget(form.password, {'attr':{'class':'input100'}}) }}
                    {{ form_errors(form.password) }}



                </div>

                <div class="flex-sb-m w-full p-t-3 p-b-32">

                </div>


                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Login
                    </button>

                </div>
                <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

                <div class="text-center p-t-46 p-b-20">
						<span class="txt2">
							or sign as guest using
						</span>
                </div>



                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>



            <div class="login100-more" style="background-image: url('{{ asset("Front/Login/images/ESPRIT-compus.jpg") }}');">
            </div>
        </div>

    </div>

</div>


